<%- include("./layouts/head.ejs")%>
<%- include("./layouts/header.ejs")%>
<%- include("./layouts/menu.ejs")%>

    

    <!-- body -->
    <div id="body">
        <div class="container">
            <%- include("./layouts/sidebar.ejs")%>

            <div id="my-cart">
                <div class="row">
                    <div class="cart-nav-item col-lg-7 col-md-7 col-sm-6 col-6">Thông tin sản phẩm</div>
                    <div class="cart-nav-item col-lg-2 col-md-2 col-sm-3 col-3">Tùy chọn</div>
                    <div class="cart-nav-item col-lg-3 col-md-3 col-sm-3 col-3">Giá</div>
                </div>
                <form method="post" action="/update-cart">
                    <% for(item of cart){%>
                    <div class="cart-item row cart_name">
                        <div class="cart-thumb col-lg-7 col-md-7 col-sm-6 col-6">
                            <img src="./images/New folder/<%=product.images[0].image%>">
                            <h4> <%=item.name%></h4>
                        </div>

                        <div class="cart-quantity col-lg-2 col-md-2 col-sm-3 col-3">
                            <input name="product[<%=item.id%>][qty]" type="number" id="quantity" class="form-control form-blue quantity" value="<%=item.qty%>"
                                min="1">
                        </div>
                        <div class="cart-price col-lg-3 col-md-3 col-sm-3 col-3"><b><%= new Intl.NumberFormat("vi-VN", { style: "currency" , currency: "VND" ,
                            minimumFractionDigits: 0, }).format(item.price*item.qty)%></b><a href="/delete-cart-<%=item.id%>">Xóa</a></div>
                    </div>
                    <% }%>
                    <div class="row">

                        <div id="customer-name" class="col-lg-4 col-md-4 col-sm-6 col-6">
                            <!-- <p style="margin-bottom: 2px;
                            margin-left: 15px;
                            color: red;
                            font-weight: bold;">mã không hợp lệ</p> -->
                            <input placeholder="Nhập mã khuyến mại (nếu có)" type="text" name="makm" class="form-control"
                               >
                        </div>


                        <div class="cart-thumb col-lg-3 col-md-3 col-sm-6 col-6" style="text-align: center;">
                            <button id="update-cart" class="btn btn-success" type="submit" name="sbm">Cập
                                nhật giỏ hàng</button>
                        </div>
                        <div class="cart-total col-lg-2 col-md-2 col-sm-6 col-6">
                            <p>Tổng tiền hàng:</p>
                            <p>Voucher từ DEEVISCO:</p>
                            <p style="font-weight: bold;">Thành tiền:</p>
                        </div>
                        <div class="cart-price col-lg-3 col-md-3 col-sm-6 col-6">
                            <b style="color: black; font-weight: normal;"> <%= new Intl.NumberFormat("vi-VN", { style: "currency" , currency: "VND" ,
                                    minimumFractionDigits: 0, }).format(cart.reduce((total, item)=>total +
                                    item.price*item.qty,0)) %></b>

                                
                            <b style="color: black; font-weight: normal;"> 0</b>



                            <b style="color: black;">   <%= new Intl.NumberFormat("vi-VN", { style: "currency" , currency: "VND" ,
                                    minimumFractionDigits: 0, }).format(cart.reduce((total, item)=>total +
                                    item.price*item.qty,0)) %></b>
                        </div>
                        
                    </div>
                </form>

            </div>
            <!--	End Cart	-->

            <!--	Customer Info	-->
            <div id="customer">
                <form method="post" action="/order">
                    <div class="row">

                        <div id="customer-name" class="col-lg-4 col-md-4 col-sm-12">
                            <input placeholder="Họ và tên (bắt buộc)" type="text" name="name" class="form-control"
                                required>
                        </div>
                        <div id="customer-phone" class="col-lg-4 col-md-4 col-sm-12">
                            <input placeholder="Số điện thoại (bắt buộc)" type="text" name="phone"
                                class="form-control" required>
                        </div>
                        <div id="customer-mail" class="col-lg-4 col-md-4 col-sm-12">
                            <input placeholder="Email (bắt buộc)" type="text" name="mail" class="form-control"
                                required>
                        </div>
                        <div id="customer-add" class="col-lg-12 col-md-12 col-sm-12">
                            <input placeholder="Địa chỉ nhà riêng hoặc cơ quan (bắt buộc)" type="text" name="add"
                                class="form-control" required>
                        </div>

                    </div>

                    <div class="row">
                        <div class="by-now col-lg-6 col-md-6 col-sm-6 col-6">
                            <button type="submit" class="btn btn-danger">
                                <b>Mua ngay</b>
                                <span>Giao hàng tận nơi siêu tốc</span>
                            </button>
                        </div>
                        <div class="by-now col-lg-6 col-md-6 col-sm-6 col-6">
                            <button type="button" class="btn btn-primary">
                                <b>Trả góp Online</b>
                                <span>Vui lòng call 02422.169.568</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
            <!--	End Customer Info	-->



        </div>
    </div>


    </div>
    <!-- end body -->

    <%- include("./layouts/footer.ejs")%>





    <script>
        // thanh 3 chấm menu
        function myFunction(x) {
            x.classList.toggle("change");
        }

    </script>

</body>

</html>